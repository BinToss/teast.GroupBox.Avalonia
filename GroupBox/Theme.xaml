<Styles xmlns="https://github.com/avaloniaui"
        xmlns:teast="clr-namespace:Teast.Controls">
  <Style Selector="teast|GroupBox">
    <Setter Property="Template">
        <ControlTemplate>
        <ContentPresenter Name="PART_ContentPresenter"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            Padding="{TemplateBinding Padding}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"/>
        </ControlTemplate>
    </Setter>
    <Setter Property="HeaderBackground" Value="{DynamicResource ThemeControlMidBrush}"/>
    <Setter Property="HeaderForeground" Value="{DynamicResource ThemeForegroundBrush}"/>
    <Setter Property="HeaderMargin" Value="4"/>
    <Setter Property="HeaderUpperCase" Value="True"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ThemeControlMidBrush}"/>
    <Setter Property="BorderThickness" Value="{DynamicResource ThemeBorderThickness}"/>
  </Style>
</Styles>