<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:teast="clr-namespace:Teast.Controls;assembly=Teast.Controls.GroupBox"
             x:Class="Sample.App">
  <Application.Styles>
    <StyleInclude Source="resm:Avalonia.Themes.Default.DefaultTheme.xaml?assembly=Avalonia.Themes.Default"/>
    <StyleInclude Source="resm:Avalonia.Themes.Default.Accents.BaseLight.xaml?assembly=Avalonia.Themes.Default"/>

    <!-- Default theme:
    <StyleInclude Source="avares://Teast.Controls.GroupBox/Themes/Default.xaml"/>
    -->

    <!-- Custom theme:-->
    <Style Selector="teast|GroupBox">
        <Setter Property="HeaderBackground" Value="{DynamicResource ThemeAccentColor3}"/>
        <Setter Property="HeaderForeground" Value="{DynamicResource ThemeForegroundBrush}"/>
        <Setter Property="HeaderMargin" Value="4"/>
        <Setter Property="HeaderUpperCase" Value="True"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentColor2}"/>
        <Setter Property="BorderThickness" Value="5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

  </Application.Styles>
</Application>